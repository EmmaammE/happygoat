    <select id="getUserByUsername" parameterType="String" resultType="csu.edu.happygoat.domain.User">
    SELECT
    SIGNON.USERNAME,
    USER.USER_ID,
    USER.USER_NICKNAME,
    USER.USER_SEX,
    USER.USER_CITY,
    USER.USER_REALNAME,
    USER.USER_ZIP,
    USER.USER_ADDRESS,
    USER.USER_QQ,
    USER.USER_WECHAT,
    USER.USER_HEADIMG,
    USER.USER_PHONE
    FROM USER, SIGNON
    WHERE USER.USER_NAME = #{username}
    AND SIGNON.USERNAME = USER.USER_NAME
  </select>

