    <select id="getAccountByPhone" parameterType="java.lang.String" resultType="csu.edu.happygoat.domain.User">
    SELECT
    SIGNON.PHONE,
    USER.USER_ID,
    USER.USER_NICKNAME,
    USER.USER_SEX,
    USER.USER_CITY,
    USER.USER_REALNAME,
    USER.USER_ZIP,
    USER.USER_ADDRESS,
    USER.USER_QQ,
    USER.USER_WECHAT,
    USER.USER_HEADIMG,
    USER.USER_NAME
    FROM USER, SIGNON
    WHERE USER.USER_PHONE = #{phonenumber}
    AND SIGNON.PHONE = USER.USER_PHONE
  </select>

    <insert id="insertAccount" parameterType="csu.edu.happygoat.domain.User">
    INSERT INTO USER
    (USER_NAME,USER_ID,USER_NICKNAME,USER_SEX,USER_CITY,USER_REALNAME,USER_ZIP,USER_ADDRESS,USER_QQ,USER_WECHAT,USER_HEADIMG,USER_PHONE)
    VALUES
    (NULL, 0, NULL, NULL, NULL, NULL, NULL,NULL, NULL, NULL,NULL, #{user_phone})
    </insert>

