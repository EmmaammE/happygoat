<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/hotel_img"
                android:scaleType="fitXY"
                android:src="@drawable/tourism_pic1"
                android:layout_width="match_parent"
                android:layout_height="230dp" />
            <ImageView
                android:id="@+id/tourism_back"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_back"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="230dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/hotel_name"
                    android:text="希腊一地轻奢蜜月9天7晚"
                    android:layout_marginLeft="20dp"
                    style="@style/Text16BlackStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/hotel_price"
                    android:text="¥30561起"
                    android:layout_marginLeft="20dp"
                    style="@style/Text14RedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="290dp"
                android:background="#ececec"
                android:layout_width="match_parent"
                android:layout_height="20dp">

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="310dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_phone"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:text="400-820-1709"
                    style="@style/Text14GrayStyle"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="联系商家"
                    style="@style/Text14GrayStyle"
                    android:layout_marginLeft="135dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="350dp"
                android:background="#ececec"
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="380dp"
                android:layout_marginBottom="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="蜜月"
                    android:layout_marginLeft="@dimen/tourism_marginleft"
                    style="@style/Text14BlackStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="希腊"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/tourism_marginleft"
                    style="@style/Text14GrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="闭上双眼，想想希腊，你想到什么"
                    android:layout_marginLeft="@dimen/tourism_marginleft"
                    style="@style/Text14GrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="是地中海和爱琴海晶莹碧波上跃动的五光十色？"
                    android:layout_marginLeft="@dimen/tourism_marginleft"
                    style="@style/Text14GrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="还是壮观海岸线旁绵延如画的沙滩上那无瑕的洁白？"
                    android:layout_marginLeft="@dimen/tourism_marginleft"
                    style="@style/Text14GrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="可能是静候您乘船/潜水探索的数千个岛屿"
                    android:layout_marginLeft="@dimen/tourism_marginleft"
                    style="@style/Text14GrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="又或是覆盖浓密森灵的欺负群山和青翠草地上缤纷的春花？"
                    android:layout_marginLeft="@dimen/tourism_marginleft"
                    style="@style/Text14GrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="蜜月内容"
                    android:layout_marginLeft="@dimen/tourism_marginleft"
                    style="@style/Text14GrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="机票：全程往返机票、机票税、燃油附加费"
                    android:layout_marginLeft="@dimen/tourism_marginleft"
                    style="@style/Text14GrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="签证：个人旅游签证费用"
                    android:layout_marginLeft="@dimen/tourism_marginleft"
                    style="@style/Text14GrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="酒店：4星酒店双人标准间住宿含酒店早餐"
                    android:layout_marginLeft="@dimen/tourism_marginleft"
                    style="@style/Text14GrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="用餐：2顿特色餐，雅典歌舞羊排餐；扎金索斯特色希腊餐"
                    android:layout_marginLeft="@dimen/tourism_marginleft"
                    style="@style/Text14GrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:background="@drawable/bottom_rectangle"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:background="@drawable/bottom_rectangle"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_kefu"
                android:scaleType="fitXY"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="在线咨询"
                style="@style/Text12BlackStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:background="@drawable/bottom_rectangle"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_phone"
                android:scaleType="fitXY"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="在线咨询"
                style="@style/Text12BlackStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:background="#e5332d"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="查询行程档期"
                style="@style/Text14WhiteStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
